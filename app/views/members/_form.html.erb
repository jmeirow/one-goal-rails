<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 

<%

buddy_text = 'The ONE Goal program uses "buddies" to provide encouragement and accountability. Would you like us to match you with a buddy or would you like to use your existing mentor or another Toastmaster you already know? (If we match you with a buddy, you will receive an email with their contact information.)'


%>

  <div>


    <div style=''>
      <div style='width:80%;margin-left:20px;font-size:12pt'>
        <div style='width:35%;font-size:12pt' >
          <table  >
            <tr class='tr'>
              <td width=400px style='font-size:12pt'><label>First Name</label></td>
              <td> <%=f.text_field :first_name  %></td>
            </tr>
            <tr class='tr'>
                <td width=400px style='font-size:12pt'><label>Last Name</label></td>
                <td>  <%= f.text_field :last_name %></td>
            </tr>
            <tr class='tr'>
              <td width=400px style='font-size:12pt'><label>Phone Number</label></td>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr class='tr'>
              <td width=400px style='font-size:12pt'><label>Club Name</label></td>
              <td>   <%= f.select :club_name,  Club.all.collect { |c| [c.name, c.name] } ,  { include_blank: true } , :selected => @member.club_name  %> </td>
              </tr>
              <tr class='tr'>
                <td width=400px style='font-size:12pt'>
                  Want a buddy? More about buddies...<%= link_to '(hover here)', '#', title: buddy_text, rel: 'tooltip' %>
                </td> 
                <td>
                  <table>
                    <tr><td><%= f.radio_button :wants_a_buddy, "y",  checked: false , :checked => (@member.wants_a_buddy == 'y') %><label>Yes, match me with a buddy.</label></td></tr>
                    <tr><td><%= f.radio_button :wants_a_buddy, "n", checked: false, :checked =>  (@member.wants_a_buddy == 'n')   %><label>No, I will use my own buddy.</label></td></tr> 
                  </table>
                </td>
              </tr>
          </table>
        </div>
      </div>
    </div>
  </div>


    <div style='margin-top:-60px;margin-left:20px;class='actions'>
      <%= f.submit %>
    </div>


<% end %>