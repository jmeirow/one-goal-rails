
<% if notice %>
  <div style='margin-left:30px;margin-bottom:10px;font-size:12pt;height:25px;border-radius:3px;width:400px;background-color:green;color:white;text-align:center;' id="notice">
     <div><%= notice %>   </div>
  </div>
<% end %>


<%= form_for(@goal) do |f| %>
  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% @goal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  <div style='margin-bottom:20px'>
    <div>
        <div style='font-size:18px; height:50px; margin-left:20px; border-top-left-radius:10px; border-top-right-radius:10px; width:400px; background-color:maroon; color:white; margin-left:30px; float-left; '> 
          <br/>
            <span style='margin-top:10px;margin-left:120px'>
              My ONE Goal
            </span>
        </div>


        <div style='font-size:18px; margin-left:30px; width:600px; height:300px; border-bottom-left-radius:10px; border-bottom-right-radius:10px; border-top-right-radius:10px; border:2px solid; border-color:#800000; float:left '>
          <br/>
          <div style='margin-left:27px;margin-top:20px'>
              <%= f.text_area :description,  :rows => 3, :cols => 10 %>
          </div>
          <p style='margin-left:30px; margin-top:-7px'><%=raw SystemText.text_for_key('GOAL_DESCRIPTION') %></p><br>


          <div style='margin-left:27px;margin-top:20px'>
            <%= f.text_area :note,  :rows => 3, :cols => 10 %>
          </div>
          <p style='margin-left:30px; margin-top:-7px'><%=raw SystemText.text_for_key('GOAL_NOTE_DESCRIPTION') %></p><br>
        </div>
      

    </div>
    
  </div>

  <div style='clear:both;padding-top:20px' >
    
    <div style='margin-top:40px;margin-left:30px' >
      <%= f.submit "Save Goal" %>
    </div>
  
  </div>



<% end %>

