<h1>Listing goals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Display name</th>
      <th>Club name</th>
      <th>Display club</th>
      <th>Request buddy</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.user_id %></td>
        <td><%= goal.description %></td>
        <td><%= goal.display_name %></td>
        <td><%= goal.club_name %></td>
        <td><%= goal.display_club %></td>
        <td><%= goal.request_buddy %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

